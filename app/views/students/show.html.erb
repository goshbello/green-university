
<div class="wrapper">
  <div class="card-box">
    <div class="box">
      <div>
        <h3><%= @student.name %></h3>
        <hr>
        <h6>Email: <%= @student.email %></h6>
        <h6>Student Course(s):</h6><p> <% if @student.courses.empty? %>
          None
          <% else %>
          <ul>
            <% @student.courses.each do |course| %>
              <li><%= course.title %></li>
            <% end %>
          </ul>
          <% end %>
         </p>
      </div>
    </div>
</div>
<% if current_user == @student %>
  <%= link_to 'Edit your profile', edit_student_path(@student), class: "custom-btn" %>
<% end %>
