<h1 class="text-center mb-5">Course Listing</h1>

<div class="wrapper">
  <div class="card-box">
  <% @courses.each do |course| %>
    <div class="box">
      <div>
        <h3><%= course.code %>: <%= course.title%></h3>
        <p><%= course.description %></p>
      </div>
      <div>
        <hr>
        <button class="btn btn-success">Enroll</button>
        <button class="btn btn-info">info</button>
      </div>
    </div>
  <% end %>
</div>
